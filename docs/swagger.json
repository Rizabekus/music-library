                "description": "Deletes song from DB",
                "produces": [
                    "application/json"
                ],
                "summary": "Deletes song from DB",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID of a song",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
